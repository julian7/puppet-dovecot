log_timestamp = "%Y-%m-%d %H:%M:%S "
mail_max_userip_connections = 40
mail_privileged_group = mail
first_valid_uid = <%= @virtual_uid %>
verbose_proctitle = yes
<%- if @sql -%>
# Auth from SQL
passdb {
  driver = sql
  args = /etc/dovecot/dovecot-sql.conf
}
userdb {
  driver = static
  args = uid=<%= @virtual_uid %> gid=<%= @virtual_gid %> home=<%= @virtual_homes %> mail=maildir:~/%d/%n/ allow_all_users=yes
}
<%- end -%>
<%- if @pam -%>
# Auth from local password database
passdb {
  driver = pam
}
userdb {
  driver = passwd
}
<%- end -%>
protocols = imap pop3
<%- if @sasl -%>
# SASL service for Postfix
service auth {
  unix_listener auth-userdb {
    group = <%= @virtual_group %>
    mode = 0660
    user = <%= @virtual_user %>
  }
  unix_listener /var/spool/postfix/private/auth {
    group = postfix
    mode = 0660
    user = postfix
  }
  user = root
}
<%- end -%>
<%- if @ssl -%>
# SSL setup
<%- if @ca %>ssl_ca = </etc/ssl/certs/<%= @ssl %>-ca.pem<% end -%>
ssl_cert = </etc/ssl/certs/<%= @ssl %>.pem
ssl_key = </etc/ssl/private/<%= @ssl %>.key
<%- end -%>
<%- if @homes_on_nfs -%>
# NFS
mmap_disable = yes
lock_method = dotlock
mail_fsync = always
mail_nfs_storage = yes
mail_nfs_index = yes
<%- end -%>
